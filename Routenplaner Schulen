    var route = [];

    function addStop(type) {
        var sel = document.getElementById('schoolSelect');
        var idx = sel.value;
        if (!idx) {
            alert('Bitte Schule w√§hlen!');
            return;
        }
        var school = schools[parseInt(idx)];
        route.push({
            name: school.name,
            address: school.address,
            itas: school.itas,
            email: school.email,
            type: type
        });
        sel.value = '';
        update();
    }

    function removeStop(idx) {
        route.splice(idx, 1);
        update();
    }

    function clearAll() {
        if (route.length > 0 && confirm('Alle l√∂schen?')) {
            route = [];
            update();
        }
    }

    function optimize() {
        if (route.length < 2) {
            alert('Mindestens 2 Stopps n√∂tig!');
            return;
        }
        route.sort(function(a, b) {
            var plzA = a.address.match(/\d{5}/);
            var plzB = b.address.match(/\d{5}/);
            plzA = plzA ? plzA[0] : '';
            plzB = plzB ? plzB[0] : '';
            return plzA.localeCompare(plzB);
        });
        update();
        alert('Route optimiert!');
    }

    function openMaps() {
        if (route.length === 0) return;
        var start = document.getElementById('startPoint').value;
        var url = 'https://www.google.com/maps/dir/';
        if (start === 'current') {
            url += 'Current+Location/';
        } else {
            url += encodeURIComponent(start) + '/';
        }
        for (var i = 0; i < route.length; i++) {
            url += encodeURIComponent(route[i].address) + '/';
        }
        window.open(url, '_blank');
    }

    function update() {
        document.getElementById('count').textContent = route.length;
        var list = document.getElementById('routeList');
        var navBtn = document.getElementById('navBtn');
        
        if (route.length === 0) {
            list.innerHTML = '<div class="empty">Keine Stopps</div>';
            navBtn.disabled = true;
        } else {
            var html = '';
            for (var i = 0; i < route.length; i++) {
                html += '<div class="route-item">';
                html += '<span class="route-number">' + (i+1) + '</span>';
                html += '<strong>' + route[i].name + '</strong>';
                html += '<button class="btn-remove" onclick="removeStop(' + i + ')">‚úï</button>';
                html += '<div class="route-meta">';
                html += (route[i].type === 'pickup' ? 'üì¶ Abholung' : 'üöö Lieferung');
                if (route[i].itas) html += ' | ITaS: ' + route[i].itas;
                if (route[i].email) html += ' | ' + route[i].email;
                html += '</div></div>';
            }
            list.innerHTML = html;
            navBtn.disabled = false;
        }
    }

    update();
</script>
